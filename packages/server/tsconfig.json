{
  "ts-node": {
    "require": ["tsconfig-paths/register"], // TODO зачем оно? Кажется, paths не парсились
    "files": true
  },
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "lib": ["DOM", "es2019", "esnext.asynciterable"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],

      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],

      "@middlewares": ["./src/middlewares"],
      "@middlewares/*": ["./src/middlewares/*"],

      "@routers": ["./src/routers"],
      "@routers/*": ["./src/routers/*"],

      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],

      "@db": ["./src/db"],
      "@db/*": ["./src/db/*"],
    }
  },
  "include": [
    "./cert",
    "./src"
  ],
  "files": [
    "index.ts"
  ]
}
