{
  "extends": "../../tsconfig.base.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"], // TODO зачем оно? Кажется, paths не парсились
    "files": true
  },
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "es2019", "esnext.asynciterable"],
    "types": ["node", "jest"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],

      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],

      "@middlewares": ["./src/middlewares"],
      "@middlewares/*": ["./src/middlewares/*"],

      "@routers": ["./src/routers"],
      "@routers/*": ["./src/routers/*"],

      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],

      "@db": ["./src/db"],
      "@db/*": ["./src/db/*"]
    }
  },
  "files": [],
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.prod.json"
    }
  ]
}
